import java.util.Scanner;

public class project {
    public static void main(String[] args) {
        Scanner inp = new Scanner(System.in);

      int n ;
      int sayi, total=0;
        System.out.print("Bir sayi giriniz :");
        n= inp.nextInt();


        while( n !=0){
            sayi= n %10;
            total= sayi+total;
            n= n/10;

        } System.out.print(total);
    }
}
